<div class="span-24">
  <div>
    <%= render :partial => 'menu' %>
  </div>
  <div class="span-14">
    <%= render :partial => 'searchForm' %>
    <div class="span-14" >
    <% unless @shipments.size == 0 %>
      
      <h6>Shipments <%= report_msg(params[:Created], params[:start], params[:end]) %>
      </h6>
      <br/>
      <%= will_paginate(@shipments) %>

      <table>
        <tr>
          <th>No</th>
          <th>Card</th>
          <th>Member</th>
          <th>Request on</th>
        </tr>

        <% @shipments.each do |shipment| %>
        <tr>
          <td><%= shipment.id %></td>
          
          <td><%= shipment.card_id %></td>
          <td><%= shipment.member.member %></td>
          <td><%= shipment.created_at.strftime('%a, %d %B, %Y at %I:%M%p') %></td>
          
          
          <td><%= link_to 'Show', shipment %></td>
          <td><%= link_to 'Confirm', edit_shipment_path(shipment) %></td>
          <!--td><%= link_to 'Destroy', shipment, :confirm => 'Are you sure?', :method => :delete %></td-->
        </tr>
        <% end %>
      </table>
      
    <% end %>
    <% if @shipments.size == 0 %>

      <div class="span-11">
        <br/>
        no data found
      </div>  
    <% end %>
    </div>
  </div>
</div>
